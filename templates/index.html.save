                       date.setDate(date.getDate() + parseInt(document.getElementById('periodLength').value));
                       if (date >= date_end){
                           var x = document.getElementById('start_of_startDate').value = '';
                           var y = document.getElementById('end_of_startDate').innerHTML = '-';
