                            <div class="container-fluid">

                                    {% if not ipt %}
                                    <form action = "map" method = "POST" novalidate>
                                        
                                        <select style="background-color:#BECFEB;" data-toggle="tooltip" data-placement="top" data_html = "true" title="Select the length (in number of days) for the periods to be analyzed" class=" m-2 btn btn-light {% if check['period'] == 0 %} border-danger {% endif %}" id="periodLength" name="periodLength" size="1" onchange="toBorderDark(id); adjust_min_of_2nd_period(); enable_2nd_calander(); enableSubmit(); enable_1st_calander(); set_max_date(); resetDates(id);">

                                            {% for i in intervals %}
